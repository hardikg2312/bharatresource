<div class="container">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pad-tb-20">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <h2 class="color-yellow font25">Search</h2>          
      <div class="panel-body clearfix">
        <%= form_tag("/workers", method: "get") do %>
          <div class="form-group">
            <label class="font14">Select State</label>
            <%= select_tag :state_id, options_from_collection_for_select(State.all, :id, :name), {:id => 'worker_state_id', :class => "form-control no-shadow no-border-radius", :style => ""} %>
          </div>

          <div class="form-group">
            <label class="font14">Select Region</label>
            <select class="form-control no-shadow no-border-radius" name="region_id" id="worker_region_id">
              <%= Region.includes(:state).each do |r| %>
                <option value="<%= r.id %>" state-id="<%= r.state.id %>"><%= r.name %></option>
              <% end %>
            </select>
          </div>

          <div class="form-group">
            <label class="font14">Select Industry</label>
            <%= select_tag :industry_id, options_from_collection_for_select(Industry.all, :id, :name), {:id => 'worker_industry_id', :class => "form-control no-shadow no-border-radius", :style => ""} %>
          </div>

          <div class="form-group">
            <label class="font14">Select Sub-Industry</label>
            <select class="form-control no-shadow no-border-radius" name="sub_industry_id" id="worker_sub_industry_id">
              <%= SubIndustry.includes(:industry).each do |s| %>
                <option value="<%= s.id %>" industry-id="<%= s.industry.id %>" ><%= s.name %></option>
              <% end %>
            </select>
          </div>

          <div class="form-group">
            <label class="font14">Year Of Experience</label>
            <%= select_tag :years_of_experience, options_for_select([['0-2 years', 1], ['2-10 years', 2], ['10+ years', 3]]), {:class => "form-control no-shadow no-border-radius", :style => ""} %>
          </div>
          <div class="form-group right">
            <%= submit_tag "SEARCH", class: "search_btn" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 home_page_right_container">
      <p class="color-yellow font25">
        ARE YOU A SKILLED WORKER ???
      </p>
      <p>
        CREATE YOUR ONLINE PROFILE ON <%= link_to "BHARATRESOURCE.COM", root_path, :style=>"color: #88bbc8;" %>.
      </p>
      <p>
        GIVE A MISS CALL ON 075060 17782
      </p>
    </div>
  </div>
</div>