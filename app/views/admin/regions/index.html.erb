<div class="bg-white pad15 font25">
  All Regions
</div>
<div class="pad15">
  <div class="breadcrumb">
    Home / All Regions
  </div>
  <div id="notice" class="alert alert-success"><%= notice %></div>
  <div class="panel panel-white">
    <div class="panel-heading clearfix">
      <div class="col-sm-6 col-md-6 col-lg-6 pad0 panel-title">
        Listing Regions
      </div>
      <div class="col-sm-6 col-md-6 col-lg-6 pad0 right">
        <%= link_to '+ Add New Region', new_admin_region_path, :class=>"btn btn-info" %>
      </div>
    </div>
    <div class="panel-body clearfix">
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>State</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @regions.each do |region| %>
              <tr>
                <td><%= region.name %></td>
                <td><%= region.state.name %></td>
                <td>
                  <%= link_to 'Show', admin_region_path(region), :class => "label label-sm label-success" %>
                  <%= link_to 'Edit', edit_admin_region_path(region), :class => "label label-sm label-warning" %>
                  <%= link_to 'Destroy', admin_region_path(region), :class => "label label-sm label-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>