<p id="notice"><%= notice %></p>

<h1>Listing Regions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.state.name %></td>
        <td><%= link_to 'Show', admin_region_path(region) %></td>
        <td><%= link_to 'Edit', edit_admin_region_path(region) %></td>
        <td><%= link_to 'Destroy', admin_region_path(region), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

