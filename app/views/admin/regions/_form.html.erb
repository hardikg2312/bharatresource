<div class="bg-white pad15 font25">
  All Region
</div>
<div class="pad15">
  <div class="breadcrumb">
    Home / All Region / Add New Region
  </div>

  <div class="panel panel-white">
    <div class="panel-heading clearfix">
      <div class="panel-title">
        Add New Region
      </div>
    </div>
    <div class="panel-body clearfix">
      <div class="col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
          <%= f.text_field :name, :required => true, :class => "form-control", :placeholder=>"Region Name" %>
        </div>
        <div class="form-group">
          <label class="font12">Select State Of Region</label>
          <%= f.collection_select :state_id, State.all , :id, :name, {}, {:class => "form-control", :style => ""}%>
        </div>
        <div class="form-group">
          <%= f.submit "Save", :class => "btn btn-primary" %>
          <%= link_to admin_regions_path do %>
            <span class ="btn btn-warning">Cancel</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>