<div class="bg-white pad15 font25">
  All Regions
</div>
<div class="pad15">
  <div class="breadcrumb">
    Home / All Regions
  </div>
  <div class="panel panel-white">
    <div class="panel-heading clearfix">
      <div class="col-sm-12 col-md-12 col-lg-12 pad0 panel-title">
        Listing Regions
      </div>
     
    </div>
    <div class="panel-body clearfix">
      <div class="alert alert-block alert-success fade in">
        <div class="gb10">
          <strong>Name:</strong>
          <%= @region.name %>
        </div>
        <div class="gb10">
          <strong>State:</strong>
          <%= @region.state_id %>
        </div>
        <div class="form-group">
          <%= link_to 'Edit', edit_admin_region_path(@region), :class=>"btn btn-warning gutter-right10" %> 
          <%= link_to 'Back', admin_regions_path, :class=>"btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
</div>




