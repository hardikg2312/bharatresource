<p id="notice"><%= notice %></p>

<h1>Listing Workers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th><th>BRID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.br_id %></td>
        <td><%= link_to 'Show', admin_worker_path(worker) %></td>
        <td><%= link_to 'Edit', edit_admin_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', admin_worker_path(worker), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

