<div class="bg-white pad15 font25">
  All Workers
</div>
<div class="pad15">
  <div class="breadcrumb">
    Home / All Workers
  </div>
  <div id="notice" class="alert alert-success"><%= notice %></div>
  <div class="panel panel-white">
    <div class="panel-heading clearfix">
      <div class="col-sm-6 col-md-6 col-lg-6 pad0 panel-title">
        Listing Workers
      </div>
      <div class="col-sm-6 col-md-6 col-lg-6 pad0 right">
        <%= link_to '+ Add New Worker', new_admin_worker_path, :class=>"btn btn-info" %>
      </div>
    </div>
    <div class="panel-body clearfix">
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>BRID</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @workers.each do |worker| %>
              <tr>
                <td><%= worker.name %></td>
                <td><%= worker.br_id %></td>
                <td>
                  <%= link_to 'Show', admin_worker_path(worker), :class => "label label-sm label-success" %>
                  <%= link_to 'Edit', edit_admin_worker_path(worker), :class => "label label-sm label-warning" %>
                  <%= link_to 'Destroy', admin_worker_path(worker), :class => "label label-sm label-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>