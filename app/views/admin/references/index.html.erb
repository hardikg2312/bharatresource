<div class="bg-white pad15 font25">
  All References
</div>
<div class="pad15">
  <div class="breadcrumb">
    Home / All Workers / All References
  </div>
  <div class="panel panel-white">
    <div class="panel-heading clearfix">
      <div class="col-sm-6 col-md-6 col-lg-6 pad0 panel-title">
        Listing References
      </div>
      <div class="col-sm-6 col-md-6 col-lg-6 pad0 right">
        <%= link_to '+ Add New Reference', new_admin_worker_reference_path(@worker), :class=>"btn btn-info" %>
      </div>
    </div>
    <div class="panel-body clearfix">
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Mobile</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @references.each do |r| %>
              <tr>
                <td><%= r.name %></td>
                <td><%= r.mobile_no %></td>
                <td><%= r.email %></td>
                <td>
                  <%= link_to 'Edit', edit_admin_worker_reference_path(@worker, r), :class => "label label-sm label-warning" %>
                  <%= link_to 'Destroy', admin_worker_reference_path(@worker, r), :class => "label label-sm label-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>