<div class="bg-white pad15 font25">
  All Sub industry
</div>
<div class="pad15">
  <div class="breadcrumb">
    Home / All Sub industry / Add New Sub industry
  </div>
  <div class="panel panel-white">
    <div class="panel-heading clearfix">
      <div class="panel-title">
        Add New Sub industry
      </div>
    </div>
    <div class="panel-body clearfix">
      <div class="col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
          <%= f.text_field :name, :required => true, :class => "form-control", :placeholder=>"Sub industry Name" %>
        </div>
        <div class="form-group">
          <label class="font12">Select industry</label>
          <%= f.collection_select :industry_id, Industry.all , :id, :name, {}, {:class => "form-control", :style => ""}%>
        </div>
        <div class="form-group">
          <%= f.submit "Save", :class => "btn btn-primary" %>
          <%= link_to admin_sub_industries_path do %>
            <span class ="btn btn-warning">Cancel</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>