<p id="notice"><%= notice %></p>

<h1>Listing Sub Industries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Industry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_industries.each do |sub_industry| %>
      <tr>
        <td><%= sub_industry.name %></td>
        <td><%= sub_industry.industry.name %></td>
        <td><%= link_to 'Show', admin_sub_industry_path(sub_industry) %></td>
        <td><%= link_to 'Edit', edit_admin_sub_industry_path(sub_industry) %></td>
        <td><%= link_to 'Destroy', admin_sub_industry_path(sub_industry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

